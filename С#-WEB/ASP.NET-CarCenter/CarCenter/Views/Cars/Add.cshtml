@using CarCenter.ViewModels.Cars

@model CarInputModel

@{
    ViewData["Title"] = "AddCar";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
                <form method="post">
            <div class="form-group">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" placeholder="BMW, Mercedes, etc...">
                <span asp-validation-for="Brand" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlateNumber"></label>
                <input asp-for="PlateNumber" class="form-control" placeholder="СТ8888XX...">
                <span asp-validation-for="PlateNumber" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageURL"></label>
                <input asp-for="ImageURL" class="form-control" placeholder="URL here...">
                <span asp-validation-for="ImageURL" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category"></label>
                <select asp-for="Category" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value = "@category.Name">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="Category" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>